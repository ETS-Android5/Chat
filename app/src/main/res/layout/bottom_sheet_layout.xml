<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    android:orientation="vertical"
    app:layout_behavior="@string/bottom_sheet_behavior">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/attachLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:gravity="center_horizontal"
            android:text="@string/location"
            android:textColor="@android:color/black"
            app:drawableTopCompat="@drawable/ic_baseline_location_on_24" />

        <TextView
            android:id="@+id/attachCamera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:gravity="center_horizontal"
            android:text="take picture"
            android:textColor="@android:color/black"
            app:drawableTopCompat="@drawable/ic_baseline_camera_alt_24" />

        <TextView
            android:id="@+id/attachGallery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="gallery photo"
            android:textColor="@android:color/black"
            app:drawableTopCompat="@drawable/ic_baseline_photo_24" />

        <TextView
            android:id="@+id/delayMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="Timed Message"
            android:textColor="@color/black"
            app:drawableTopCompat="@drawable/ic_baseline_access_time_black" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/videoMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:gravity="center_horizontal"
            android:text="Video Message"
            android:textColor="@color/black"
            app:drawableTopCompat="@drawable/ic_baseline_videocam_black"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/attachFile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:gravity="center_horizontal"
            android:text="Attach File"
            android:visibility="gone"
            android:textColor="@android:color/black"
            app:drawableTopCompat="@drawable/ic_baseline_attach_file_24" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="Send Contact"
            app:drawableTopCompat="@drawable/ic_baseline_contacts_24"
            android:textColor="@android:color/black"
            android:id="@+id/contact"
            android:visibility="visible"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            app:drawableTopCompat="@drawable/ic_baseline_file_copy_black"
            android:id="@+id/document"
            android:text="Document"
            android:textColor="@color/black"
            android:visibility="gone"
            />
    </LinearLayout>
</LinearLayout>